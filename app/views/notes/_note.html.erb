

<li id="nota_<%= note.id %>">
  <div class="container bootstrap snippet">
    <div class="row">
    	<ul class="notes">   
            <li>
                <div class="rotate-1 yellow-bg item">
                    <small><%= note.created_at.strftime("%b %d, %Y") %></small>
                      <div class="col-md-6">
                        <h4>Note of: <%= note.user.name %></h4>
                        <p class="nombres"><%= note.content %></p>
                        <a href="#" class="text-danger pull-right"><i class="fa fa-trash-o "></i></a>
                      </div>  
                </div>
            </li>   
		</ul>  
      <%= link_to 'X', note, method: :delete, data: { confirm: 'Are you sure?', 
      remote: true }, class:'btn btn-danger btn-circle btn-lg' 
  %>
	</div>
</div>

</li>

